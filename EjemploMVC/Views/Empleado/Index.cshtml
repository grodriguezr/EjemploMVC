@model EjemploMVC.ViewModels.ListaEmpleadoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyView</title>
</head>
<body>
    <div style="text-align:right">
        Hola, @Model.NombreUsuario
        <a href="/Autenticacion/Logout">Cerrar sesión</a>
    </div>
    <div> 
        @{ 
//EjemploMVC.Models.Empleado emp = (EjemploMVC.Models.Empleado)ViewData["EMpleado"];
//EjemploMVC.Models.Empleado emp = (EjemploMVC.Models.Empleado)ViewBag.Empleado;
        }
        @*<b>Detalles de empleado</b><br />
        Nombre de empleado: @Model.NombreEmpleado <br />
        <span style="background-color:@Model.SalarioColor">
            Salario: @Model.Salario <br />
        </span>*@

        @*Hola @Model.NombreUsuario*@
        <hr />
        @*<a href="Empleado/AddNew">Nuevo</a>*@
        @{ 
            Html.RenderAction("GetLinkAgregarNuevo");
        }
        <table border="1">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Salario
                </th>
            </tr>
            @foreach (var item in Model.Empleados)
            {
                <tr>
                    <td>
                        @item.NombreEmpleado
                    </td>
                    <td style="background-color:@item.SalarioColor">
                        @item.Salario
                    </td>
                </tr>
            }

        </table>
        @{ 
            //Html.RenderPartial("Footer", Model.footerData);
            MvcHtmlString result = Html.Partial("Footer", Model.footerData);
            string finalResult = result.ToHtmlString().Replace("2018", "200000");
        }
        @MvcHtmlString.Create(finalResult)
    </div>
</body>
</html>

